<?xml version="1.0" encoding="utf-8"?>
<com.xxun.watch.xunpet.view.DragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xxun.watch.xunpet.activity.XunPetResetActivity">

    <RelativeLayout
        android:layout_width="@dimen/screen_width"
        android:layout_height="@dimen/screen_height"
        android:layout_centerInParent="true"
        android:background="@color/bg_color">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/iv_xunpet_feed"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="@dimen/screen_width"
            android:layout_height="@dimen/bottom_height"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_reset_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/btn_confirm_selector" />
            <ImageView
                android:id="@+id/btn_reset_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/btn_cancel_selector"/>
        </LinearLayout>

    </RelativeLayout>

</com.xxun.watch.xunpet.view.DragLayout>
